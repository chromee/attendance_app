<% provide(:title, @project.name) %>
<div class="row">
  <aside class="col-md-8 col-md-offset-2">
    <section>
      <h1 class="center" style="font-size: 40px;"><%= @project.name %> (立案者:<%= @planner.name %>)</h1>
      <table class="table">
        <thead>
      			<th>オプション名</th>
      			<th>値段</th>
      			<th>投票数</th>
      			<th>備考</th>
      	</thead>
      	<tbody>
      	  <% @project_options.each_with_index do |project_option, i| %>
      	  <tr>
      	    <td><%= project_option.name %></td>
      	    <td><%= "#{project_option.price}円"%></td>
      	    <td><%= @vote_counts[i] %></td>
      	    <td><%= project_option.remarks %></td>
      	  </tr>
      	  <% end %>
      	  <tr>
      	    <td>反対</td>
      	    <td></td>
      	    <td><%= @disapproved_count %></td>
      	    <td></td>
      	  </tr>
      	</tbody>
      </table>
    </section>
    <div class="center">
      <%= link_to "投票", select_project_votes_path, class: "btn btn-lg btn-primary" %>
      <% if project_create_user?(@project) %>
      <%= link_to "企画編集", edit_project_path, class: "btn btn-lg btn-primary" %>
      <% end %>
      <%= link_to "企画一覧", projects_path, class: "btn btn-lg btn-primary" %>
    </div>
  </aside>
</div>
