<% provide(:title, "attend") %>
<h1>出席</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @attendance, :url => {:action => :create} do |f| %>

      <%= f.label :soukai_id %>
      <%= f.collection_select :soukai_id, @month, :id, :name,
                {prompt: true}, {class: "form-control input-sm"}%>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.submit "出席", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>